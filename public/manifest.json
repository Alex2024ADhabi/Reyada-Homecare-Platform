    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Patient Dashboard",
      "short_name": "Dashboard",
      "description": "View patient dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Clinical Forms",
      "short_name": "Forms",
      "description": "Access clinical forms",
      "url": "/clinical/forms",
      "icons": [
        {
          "src": "/icons/shortcut-forms.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Patient Management",
      "short_name": "Patients",
      "description": "Manage patients",
      "url": "/patients",
      "icons": [
        {
          "src": "/icons/shortcut-patients.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+reyada",
      "url": "/handle?type=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/handle-files",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif"]
      }
    }
  ]
}
