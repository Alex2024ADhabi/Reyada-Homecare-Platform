      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Patient Dashboard",
      "short_name": "Dashboard",
      "description": "View patient dashboard with real-time updates",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Clinical Forms",
      "short_name": "Forms",
      "description": "Access AI-powered clinical forms",
      "url": "/clinical/forms",
      "icons": [
        {
          "src": "/icons/shortcut-forms.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Patient Management",
      "short_name": "Patients",
      "description": "Comprehensive patient management",
      "url": "/patients",
      "icons": [
        {
          "src": "/icons/shortcut-patients.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Daman Claims",
      "short_name": "Claims",
      "description": "Smart insurance claims processing",
      "url": "/claims/daman",
      "icons": [
        {
          "src": "/icons/shortcut-claims.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "AI Analytics",
      "short_name": "Analytics",
      "description": "Healthcare AI insights and analytics",
      "url": "/analytics/ai",
      "icons": [
        {
          "src": "/icons/shortcut-ai.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Compliance Monitor",
      "short_name": "Compliance",
      "description": "DOH/JAWDA compliance monitoring",
      "url": "/compliance/monitor",
      "icons": [
        {
          "src": "/icons/shortcut-compliance.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+reyada",
      "url": "/handle?type=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/handle-files",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif"]
      }
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard view on desktop"
    },
    {
      "src": "/screenshots/mobile-patient-form.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Patient form on mobile"
    }
  ]
}