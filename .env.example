# Production Environment Variables Configuration
# Copy this file to .env and fill in your actual API keys and endpoints

# ================================
# SPEECH-TO-TEXT SERVICES
# ================================

# Google Cloud Speech-to-Text API
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here
GOOGLE_CLOUD_PROJECT_ID=your_project_id

# Azure Cognitive Services Speech
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region

# OpenAI Whisper API
OPENAI_API_KEY=your_openai_api_key_here

# ================================
# EMIRATES ID VERIFICATION
# ================================

# Primary Emirates ID API (UAE Government)
EMIRATES_ID_PRIMARY_URL=https://api.emiratesid.ae/v1
EMIRATES_ID_API_KEY=your_emirates_id_api_key_here

# Fallback Emirates ID Service
EMIRATES_ID_FALLBACK_URL=https://backup-api.emiratesid.ae/v1
EMIRATES_ID_FALLBACK_KEY=your_fallback_api_key_here

# ================================
# BIOMETRIC VERIFICATION
# ================================

# Primary Biometric Service
BIOMETRIC_PRIMARY_URL=https://api.biometric-service.com/v2
BIOMETRIC_API_KEY=your_biometric_api_key_here

# Fallback Biometric Service
BIOMETRIC_FALLBACK_URL=https://backup-biometric.com/v1
BIOMETRIC_FALLBACK_KEY=your_fallback_biometric_key_here

# ================================
# SERVER SYNCHRONIZATION
# ================================

# Primary Sync Service
SYNC_PRIMARY_URL=https://api.healthcare-sync.com/v1
SYNC_API_KEY=your_sync_api_key_here

# Fallback Sync Service
SYNC_FALLBACK_URL=https://backup-sync.healthcare.com/v1
SYNC_FALLBACK_KEY=your_fallback_sync_key_here

# ================================
# DATABASE CONNECTIONS
# ================================

# Primary Database
DATABASE_URL=postgresql://username:password@localhost:5432/reyada_homecare
DATABASE_SSL=true

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ================================
# HEALTHCARE INTEGRATIONS
# ================================

# DOH (Department of Health) API
DOH_API_URL=https://api.doh.gov.ae/v1
DOH_API_KEY=your_doh_api_key_here
DOH_FACILITY_ID=your_facility_id

# DAMAN Insurance API
DAMAN_API_URL=https://api.daman.ae/v2
DAMAN_API_KEY=your_daman_api_key_here
DAMAN_PROVIDER_ID=your_provider_id

# MALAFFI Health Information Exchange
MALAFFI_API_URL=https://api.malaffi.ae/v1
MALAFFI_API_KEY=your_malaffi_api_key_here
MALAFFI_FACILITY_CODE=your_facility_code

# ================================
# SECURITY & ENCRYPTION
# ================================

# JWT Secrets
JWT_SECRET=your_super_secure_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_token_secret_here

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_IV=your_16_character_iv_here

# ================================
# NOTIFICATION SERVICES
# ================================

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@reyada-homecare.com

# Push Notifications (Firebase)
FIREBASE_SERVER_KEY=your_firebase_server_key_here
FIREBASE_PROJECT_ID=your_firebase_project_id

# ================================
# CLOUD STORAGE
# ================================

# AWS S3 for file storage
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=me-south-1
AWS_S3_BUCKET=reyada-homecare-files

# ================================
# MONITORING & LOGGING
# ================================

# Application Monitoring
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# Log Management
ELASTICSEARCH_URL=https://your-elasticsearch-cluster.com
ELASTICSEARCH_API_KEY=your_elasticsearch_api_key

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Environment
NODE_ENV=production
PORT=3000

# Debug Settings
DEBUG_MODE=false
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# HEALTHCARE SPECIFIC
# ================================

# Clinical Decision Support
CDS_API_URL=https://api.clinical-decision-support.com/v1
CDS_API_KEY=your_cds_api_key_here

# Drug Interaction Database
DRUG_INTERACTION_API_URL=https://api.drug-interactions.com/v1
DRUG_INTERACTION_API_KEY=your_drug_interaction_key_here

# Medical Terminology Services
SNOMED_API_URL=https://api.snomed.org/v1
SNOMED_API_KEY=your_snomed_api_key_here

ICD10_API_URL=https://api.icd10.who.int/v1
ICD10_API_KEY=your_icd10_api_key_here

# ================================
# BACKUP & DISASTER RECOVERY
# ================================

# Backup Storage
BACKUP_S3_BUCKET=reyada-homecare-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here

# Disaster Recovery
DR_DATABASE_URL=postgresql://username:password@dr-server:5432/reyada_homecare_dr
DR_REDIS_URL=redis://dr-redis-server:6379

# ================================
# COMPLIANCE & AUDIT
# ================================

# Audit Trail Storage
AUDIT_DATABASE_URL=postgresql://username:password@audit-server:5432/reyada_audit
AUDIT_RETENTION_DAYS=2555

# Compliance Reporting
COMPLIANCE_REPORT_EMAIL=compliance@reyada-homecare.com
HIPAA_OFFICER_EMAIL=hipaa-officer@reyada-homecare.com

# ================================
# PERFORMANCE MONITORING
# ================================

# Performance Metrics
PERFORMANCE_MONITORING_URL=https://api.performance-monitor.com/v1
PERFORMANCE_API_KEY=your_performance_api_key_here

# Load Balancer Health Check
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TOKEN=your_health_check_token_here